#delete command decProjectOngoingRestart;
add command 'decProjectOngoingRestart' 
	description 'Command to Restart Ongoing Project'
	alt 'emxProgramCentral.Common.Gate.Resume' 
	label 'emxProgramCentral.Common.Gate.Resume' 
	href '${COMMON_DIR}/decProjectStatusControl.jsp?projectStatus=Restart' 
	setting 'Confirm Message' 'emxProgramCentral.ProjectSpace.alert.Restart' 
	setting 'Image' '${COMMON_DIR}/images/iconActionResume.png'
	setting 'Registered Suite' 'ProgramCentral'
	setting 'Target Location' 'hiddenFrame'
	setting 'Submit' true
	setting 'Access Expression' '(attribute[decProjectStatus]==Hold) && (context.user.isassigned[decSystemAdmin] || owner==context.user)'
;
add property command_decProjectOngoingRestart on program eServiceSchemaVariableMapping.tcl to command 'decProjectOngoingRestart'
;

